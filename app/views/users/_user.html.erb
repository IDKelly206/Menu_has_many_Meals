<%= turbo_frame_tag dom_id(user) do %>
  <div class="user">
    <% full_name = "#{user.name_first}"" ""#{user.name_last}" %>
    <%=  link_to full_name,
                 user_path(user),
                 data: { turbo_frame: "_top"} %>
    <div class="user_actions">
      <%= button_to "Delete",
                    user_path(user),
                    method: :delete,
                    class: "btn" %>
      <%= link_to "Edit",
                  edit_user_path(user),
                  class: "btn" %>
    </div>
  </div>
<% end %>
