<div class="container">
<%= link_to household_path(@household) %>

  <div class="header">
    <h1>New User</h1>
  </div>

  <%= turbo_frame_tag dom_id(@user) do %>
    <%= turbo_frame_tag "modal" do %>
      <div class="row">
        <div>
          <div class="card m-4 ">
            <div class="card-header">
              <h2 class="card-title">User Create</h2>
            </div>
            <div class="card-body">
              <%= render "form", user: @user %>
            </div>
            <div class="card-footer text-muted mt-2">

            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
