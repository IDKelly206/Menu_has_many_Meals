  <%= simple_form_for(@user) do |f|%>
    <%= f.input :name_first,
            autofocus: true  %>
    <%= f.input :name_last %>
    <%= f.input :email,
            required: true,
            input_html: { autocomplete: "email" } %>
    <%= f.hidden_field :household_id, value: current_user.household_id %>
    <%= link_to "Cancel", household_path(@household), class: "btn"  %>
    <%= f.submit "Add User to Household", class: "btn btn-primary" %>
  <% end %>
