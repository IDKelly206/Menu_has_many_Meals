<header class="navbar">
    <%= link_to root_path do %>
      <i class="fa-regular fa-calendar-days navbar__brand"></i>
    <% end %>
    <% if user_signed_in? %>
      <div class="navbar__name">
        <%= link_to "Menu", menus_path , {:class=>"navbar__btn"} %>
      </div>
      <div class="navbar__name">
        <%= link_to "Recipes", recipes_path, {:class=>"navbar__btn"} %>
      </div>
      <div class="navbar__name">
        <%= link_to "Products", products_path, {:class=>"navbar__btn"} %>
      </div>
      <div class="navbar__name">
        <%= link_to "Grocery List", groceries_path, {:class=>"navbar__btn"} %>
      </div>
      <div class="dropdown navbar__right">
        <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa-solid fa-bars navbar__btn"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <p>Welcome back, NAME</p>
          <%= link_to "Household", household_path(current_user.household_id) , class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
        </div>
      </div>
    <% else %>
      <div class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </div>
    <% end %>
</header>
