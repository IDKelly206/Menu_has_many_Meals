<div class="container">
  <h1>New Course page</h1>
<div>
  <%= link_to "Enter Meal info", new_meal_path, data: { turbo_frame: 'modal' } %>
</div>

<%= @menu_ids.each do |menu| %>
 <p><%= menu %></p>
<% end %>

</div>


<%= turbo_frame_tag "modal" do %>
  <div class="row">
    <div class="" data-controller="turbo-modal">
      <div class="card mb-4">
        <div class="card-header">
          <h2 class="card-title">Meal Create</h2>
        </div>
        <div class="card-body">
          <%= render "meals/new_meal" %>
        </div>
        <div class="card-footer text-muted">
          <%= button_tag "Close", data: { action: "turbo-modal#hideModal"},
              type: "button", class: "rounded-lg py-3 px-5 bg-red-400 text-blue" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
