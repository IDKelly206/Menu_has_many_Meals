<%# <head><meta name="turbo-visit-control" content="reload"></head> %>
<%- title "Course" %>

<div class="section-menu">
  <%# TurboFrameTag %>
  <div class="container">

    <div class="header">
      <div class="search-section">
        <div class="search-section__filters">
          <h4>Title page: <%= yield(:title) %></h4>
          <p>Filters:</p>
        </div>
        <div class="search-section__body">
          <div class="header">
          </div>
          <div class="search-bar">
            <%= render 'recipes/search_form' %>
          </div>
        </div>


        <div class="search-section__filters">
          <h6>Add Course for:</h4>
          <ul class="details">
            <li class="item item--user"><%= @meal.user.name_first %></li>
          </ul>
          <ul class="details">
            <li class="item item--type"><%= @meal_type %></li>
            <li class="item item--type"><%= @course_type.capitalize %></li>
          </ul>
          <ul class="details">
            <li class="item item--date"><%= @menu.day_of_week %></li>
          </ul>
        </div>


      </div>
    </div>


    <div>
      <%= render "recipes/recipes", recipes: @recipes, locals: { title: yield(:title) } %>
    </div>
  </div>
  <%# TurboFrameTag %>
</div>
