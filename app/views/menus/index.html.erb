<h1>Menus#index</h1>
<p>Find me in app/views/menus/index.html.erb</p>

<div class="container">

<%= link_to "Create a new Meal", new_meal_path, class: "btn btn-ghost" %>

<% @menus.each do |menu| %>
    <div class="card-product">
      <div class="card-product-infos">
      <h6><%= menu.date %></h6>
      <p><%= link_to "See Menu details", menu %></p>
      <ul>
        <% menu.meals.all.each do |meal| %>
          <li><%= meal.name %>  </li>
          <li> <%= meal.user.name_first %> </li>
        <% end %>
      </ul>
      </div>
      <div>

      </div>
    </div>
  <% end %>


</div>
