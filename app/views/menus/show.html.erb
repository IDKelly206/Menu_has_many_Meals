
<div class="container">
  <h1>Menu Show page</h1>
</div>

<div class="section-menu">
  <div class="card-menu-day">
    <div class="card-menu-day-header">
      <div class="card-menu-day-date">
        <h4><%= @menu.date.strftime("%a") %></h4><h6><%= @menu.date.strftime("%B"" ""%d") %></h6>
      </div>
      <div class="card-menu-day-users">
        <% @users.each do |user| %>
          <div class= "card-menu-day-user">
            <h6><%= user.name_first %></h6>
          </div>
        <% end %>
      </div>
    </div>

    <div class="card-menu-day-body">

        <% @users.each do |user| %>
          <div class= "card-menu-day-user-section">

            <% @meal_type.each do |meal| %>
              <div class="card-menu-day-meal">
                <p><%= meal %></p>
                <div class="card-menu-day-course">

                </div>
              </div>
            <% end %>
          </div>
        <% end %>

    </div>

  </div>
</div>
