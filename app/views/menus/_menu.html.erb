<%= turbo_frame_tag "menu" do %>
    <div class="card-menu">
      <div class="card-menu__header">
        <h2><%= link_to menu.day_of_week, menu %></h2>
      </div>
      <div class="card-menu__body">
        <% @meal_types.each do |meal_type| %>
          <div class= "card-menu-meal">
            <div class="card-menu-meal__header">
              <%= meal_type %>
            </div>

            <%= turbo_frame_tag "menu-meal-body" do %>

            <div class="card-menu-meal__body">
              <% @users.each do |user| %>
                <div class= "card-menu-meal-user">
                  <div class="card-menu-meal-user__header">
                    <%= link_to user.name_first, menu_meal_path(menu, Meal.find_by(user_id: user, menu_id: menu, meal_type: meal_type)) %>
                  </div>
                  <div class="card-menu-meal-user__body">
                      <% @course_types.each do |course_type| %>
                        <% meal_courses = Meal.find_by(user_id: user, menu_id: menu, meal_type: meal_type).courses.map { |course| course.course_type } %>
                        <% if meal_courses.include?(course_type) %>
                          <div class= "card-menu-meal-user-course">
                            <i class="fa-solid fa-square-check"></i> <%= course_type %>
                          </div>
                        <% else %>
                          <div class= "card-menu-meal-user-course">
                            <i class="fa-regular fa-square"></i> <%= course_type %>
                          </div>
                        <% end %>
                      <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <% end %>

          </div>
        <% end %>
      </div>
    </div>
<% end %>
