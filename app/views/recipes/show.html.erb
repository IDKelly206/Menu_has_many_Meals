<h1>Recipes Show page</h1>
<div class="container">
<div class="recipe-card">
    <div class="card-header">
    <%= image_tag (@recipe.image), size: "100" %>
    </div>
    <div class="card-body">
      <p><small>Name:<%= @recipe.label %></small>
      <small> Source:<%= @recipe.source %></small>
      <small> Servings:<%= @recipe.yield %></small>
      <small> Ingredients:<%= @recipe.ingredients.count %></small></p>
    </div>
    <div class="card-footer">
    <p><font size="1">ID: <%= @recipe.erecipe_id %></font></p>
    </div>
  </div>
  <ul>
    <% @recipe.ingredients.each do |i| %>
      <li><font size="1"><%= i['text'] %></font></li>
    <% end %>
  </ul>
</div>
