<%- title "Multi-Meal" %>
<div class="container">
  <div class="header">
    <div class="search-section">

      <div class="search-section__filters">
        <h6>Title page: <%= yield(:title) %></h6>
        <p>Filters:</p>
      </div>

      <div class="search-section__body">
        <div class="top">
          <h6>Add Course for:</h6>
          <div class="meal-filters">
            <% unless @meal_type.nil?  %>
              <ul class="details">
                <li class="btn--pill btn--pill--meal"><%= @meal_type.capitalize %></li>
              </ul>
            <% end %>
            <% unless @course_type.nil?  %>
              <ul class="details">
                <li class="btn--pill btn--pill--course"><%= @course_type.capitalize %></li>
              </ul>
            <% end %>
            <ul class="details">
              <% if @users.present?  do %>
                <% @users.each do |user| %>
                  <li class="btn--pill btn--pill--user"><%= User.find(user.id).name_first %></li>
                <% end %>
              <% else %>
                  <li class="btn--pill btn--pill--user"><%= @meal.user.name_first %></li>
              <% end %>
            </ul>
            <ul class="details">
              <% if @menus.present? do %>
                <% @menus.each do |menu| %>
                <li class="btn--pill btn--pill--date"><%= Menu.find(menu.id).day_of_week %></li>
                <% end %>
              <% else %>
                <li class="btn--pill btn--pill--date"><%= @menu.day_of_week %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="search-bar">
          <%= render 'recipes/search_form' %>
        </div>
      </div>

      <div class="search-section__courses">
        <% @course_types.each do |course_type| %>
          <div class="course_type">
            <div class="type">
              <span class="title"><%= course_type.capitalize %>s:</span>
            </div>
            <div class="courses">
              <p>render courses</p>
              <%# column %>
              <%# flex-start %>
              <%# render meal--course partaials %>
            </div>
          </div>
        <% end %>
      </div>





    </div>
  </div>
  <br>
  <%= render "recipes/recipes", recipes: @recipes, locals: { title: yield(:title) } %>
</div>
