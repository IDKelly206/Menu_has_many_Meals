<div >
  <%= form_with url: new_meal_path, method: 'get' do |f| %>
    <div class="mb-3" >
      <% @meal_types.each do |meal_type| %>
        <%= f.radio_button(:meal_type, meal_type) %>
        <%= f.label(:meal_type, meal_type) %>
      <% end %>
    </div>
    <div class="mb-3" >
      <%= f.collection_check_boxes :user_ids, @users, :id, :name_first, include_hidden: false do |b| %>
        <%= b.check_box class: "check_box" %>
        <%= b.label  %>
      <% end %>
    </div>
    <div class="mb-3" >
      <%= f.collection_check_boxes :menu_ids, @menus, :id, :day_of_week, include_hidden: false do |b| %>
        <%= b.check_box class: "check_box" %>
        <%= b.label  %>
      <% end %>
    </div>
      <%= f.submit "Next", class: "btn btn-light" %>
      <%= link_to "Cancel", menus_path, class: "btn btn-light"  %>
  <% end %>
</div>
